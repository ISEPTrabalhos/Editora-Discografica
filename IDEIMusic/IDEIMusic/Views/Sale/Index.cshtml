@model IEnumerable<IDEIMusic.ViewModels.SaleView>
@{
    ViewBag.Title = "Index";
}

<h2>IDEIMusic Sales</h2>
@using (Html.BeginForm())
{
<p>
    Find by Date: @Html.TextBox("FromString") - @Html.TextBox("ToString")
    <input type="submit" value="Search" />
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sale.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saleDetails.Album)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saleDetails.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saleDetails.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sale.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saleDetails.Type)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sale.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saleDetails.Album)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saleDetails.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saleDetails.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sale.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saleDetails.Type)
            </td>
        </tr>
    }
</table>
